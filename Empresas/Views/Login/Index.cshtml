@model Empresas.Models.Login

@{
    Layout = "~/Views/Shared/_Home.cshtml";
}
<style>
    body {
        background-image: url(../Content/images/fondo.jpg);
    }

    .navbar ul {
        list-style: none;
        padding-left: 10px;
    }
    /*
        .navbar ul li {
