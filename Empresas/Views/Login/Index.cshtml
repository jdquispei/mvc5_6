<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>DGAC - Accesos al Sistema</strong></h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "logForm", name = "logForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.NombreUsuario, new { id = "NombreUsuario", name = "NombreUsuario", @class = "form-control", @placeholder = "Usuario", @maxlength = "100", @minlength = "3", data_valid = "num_car" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Clave, new { id = "Clave", name = "Clave", @class = "form-control", @placeholder = "Password", @maxlength = "100", @minlength = "3" })
                            </div>
                            <br />
                            @Html.ValidationSummary(false)
                            <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Content/Scripts/Base/js_Login.js")"></script>
